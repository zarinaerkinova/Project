<div class="container">
    <form action="/products/add" method="POST">
    <div class="input-field col s6">
        <input placeholder="Placeholder" id="name" type="text" class="validate" name="name">
        <label for="name">Name</label>
    </div>
    <div class="input-field col s6">
        <input id="image" type="text" class="validate" name="image">
        <label for="image">Image</label>
    </div>

    <div class="input-field col s6">
        <input id="price" type="number" class="validate" name="price" min="0">
        <label for="price">Price</label>
    </div>

    <div class="input-field  col s6" style="text-align: end;">
        <select name="categoryId" class="browser-default">
            <option value="">Select Category</option>
            {{#each categories}}
            <option value="{{ _id }}">{{ name }}</option>
            {{/each}}
        </select>
        <br>
        <button class="waves-effect waves-light btn" type="submit">Create product</button>
    </div>
</form>
</div>