<div class="container">
    <div class="row">
        <div class="col s10">
            <h1>{{name}}</h1>
        </div>
    </div>

    <div class="row" style="gap: 10px 10px;">
        {{#each products}}
        <div class="col s4" style="box-shadow: 0px 0px 10px #ccc; text-align: center;">
            <h2>
                {{name}}
            </h2>

            <img src="{{image}}" alt="" width="50%">
            <p>${{price}}</p>

            <a href="/buy" class="btn btn-primary" style="margin-bottom: 20px;">Buy product</a>
        </div>
        {{/each}}
    </div>
</div>