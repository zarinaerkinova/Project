<div class="container">
    <div class="row">
        {{#each products}}
        <div class="col s12 m6">
            <div class="card">
                <div class="card-image">
                    <img src={{image}}>
                </div>
                <div class="card-content">
                    <span class="card-title">{{name}}</span>
                    <p>Price: ${{price}}</p>

                    <a href="/products/update/{{id}}" class="waves-effect waves-light btn">Update</a>
                    <a href="/products/delete/{{id}}" class="waves-effect waves-light btn" style="background-color: red;">Delete</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <a href="/products/add" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">+</i></a>
</div>